<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_main_gradient">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/iv_arrow_back"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:adjustViewBounds="false"
        android:background="@null"
        android:cropToPadding="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_arrow_back" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_avatar"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/iv_letter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_letter" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="user "
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_description_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:text="@string/profile_email"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="200dp"
        android:text="some@gmail.com"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switch_notifications"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/profile_notifications"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="230dp"
        android:layout_height="51dp"
        android:background="@drawable/shape_profile_change_password_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"
        android:text="@string/profile_change_password" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="230dp"
        android:layout_height="51dp"
        android:background="@drawable/shape_profile_exit_button"
        android:layout_marginTop="475dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/profile_exit"
        android:textStyle="bold" />

</FrameLayout>
