<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogs_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_gradient">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
         />
    <ImageView
        android:id="@+id/ivHamburger"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/hamburger_icon"
        app:srcCompat="@drawable/hamburger_icon"
        android:layout_marginTop="@dimen/hambMarginTop"
        android:layout_marginStart="@dimen/hambMarginLeft"
        />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/logo_size_small"
        android:layout_height="@dimen/logo_size_small"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/logoMarginTop"
        android:src="@drawable/logo"
        app:srcCompat="@drawable/logo"
        tools:srcCompat="@drawable/logo" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/search"
        app:srcCompat="@drawable/search"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        />

    <FrameLayout
        android:id="@+id/frmDialogList"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        />
    <FrameLayout
        android:id="@+id/frmHideFragment"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="280dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDialogsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        />

</FrameLayout>